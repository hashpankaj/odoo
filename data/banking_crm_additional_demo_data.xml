<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Additional Demo Loan Applications -->
        <record id="banking_loan_application_demo_1" model="x_banking.loan.application">
            <field name="partner_id" ref="res_partner_demo_1"/>
            <field name="loan_type">retail</field>
            <field name="loan_product">Home Loan Product</field>
            <field name="requested_amount">300000.00</field>
            <field name="tenure">36</field>
            <field name="state">submitted</field>
        </record>

        <record id="banking_loan_application_demo_2" model="x_banking.loan.application">
            <field name="partner_id" ref="res_partner_demo_2"/>
            <field name="loan_type">retail</field>
            <field name="loan_product">Car Loan Product</field>
            <field name="requested_amount">45000.00</field>
            <field name="tenure">36</field>
            <field name="state">approved</field>
        </record>

        <record id="banking_loan_application_demo_3" model="x_banking.loan.application">
            <field name="partner_id" ref="res_partner_demo_1"/>
            <field name="loan_type">retail</field>
            <field name="loan_product">Personal Loan Product</field>
            <field name="requested_amount">10000.00</field>
            <field name="tenure">36</field>
            <field name="state">rejected</field>
        </record>

        <!-- Additional Demo Accounts -->
        <record id="banking_account_demo_4" model="x_banking.account">
            <field name="account_number">ACC00004_DEMO</field>
            <field name="account_type">savings</field>
            <field name="balance">7500.00</field>
            <field name="partner_id" ref="res_partner_demo_1"/>
            <field name="status">active</field>
        </record>

        <!-- Additional Demo Loans -->
        <record id="banking_loan_demo_3" model="x_banking.loan">
            <field name="loan_type">Education Loan</field>
            <field name="principal_amount">50000.00</field>
            <field name="interest_rate">5.5</field>
            <field name="term">120</field>
            <field name="status">active</field>
            <field name="partner_id" ref="res_partner_demo_2"/>
        </record>

        <!-- Additional Demo Tickets -->
        <record id="banking_ticket_demo_3" model="x_banking.ticket">
            <field name="name">Enquiry about new credit card</field>
            <field name="description">Customer interested in applying for a new credit card.</field>
            <field name="partner_id" ref="res_partner_demo_1"/>
            <field name="state">new</field>
            <field name="priority">1</field>
        </record>

        <!-- Additional Demo CRM Leads -->
        <record id="crm_lead_demo_3" model="crm.lead">
            <field name="name">Potential customer for business loan</field>
            <field name="partner_id" ref="res_partner_demo_2"/>
            <field name="expected_product_type">loan</field>
            <field name="lead_source_bank">Referral</field>
        </record>

    </data>
</odoo>