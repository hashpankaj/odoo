<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Demo Partners -->
        <record id="res_partner_demo_1" model="res.partner">
            <field name="name">John Doe</field>
            <field name="email">john.doe@example.com</field>
            <field name="phone">+1 (123) 456-7890</field>
            <field name="kyc_status">verified</field>
            <field name="credit_score">750</field>
            <field name="cif_number">CIF0001</field>
            <field name="date_of_birth">1985-05-15</field>
            <field name="gender">male</field>
            <field name="marital_status">married</field>
            <field name="communication_preference">email</field>
            <field name="consent_gdpr" eval="True"/>
            <field name="marketing_segment">high_value</field>
            <field name="linkedin_profile">https://www.linkedin.com/in/johndoe</field>
        </record>

        <record id="res_partner_demo_2" model="res.partner">
            <field name="name">Jane Smith</field>
            <field name="email">jane.smith@example.com</field>
            <field name="phone">+1 (987) 654-3210</field>
            <field name="kyc_status">pending</field>
            <field name="credit_score">680</field>
            <field name="cif_number">CIF0002</field>
            <field name="date_of_birth">1990-11-22</field>
            <field name="gender">female</field>
            <field name="marital_status">single</field>
            <field name="communication_preference">phone</field>
            <field name="consent_gdpr" eval="True"/>
            <field name="marketing_segment">new_customer</field>
            <field name="twitter_profile">https://twitter.com/janesmith</field>
        </record>

        <!-- Demo Bank Accounts -->
        <record id="banking_account_demo_1" model="x_banking.account">
            <field name="account_number">ACC00001_DEMO</field>
            <field name="account_type">savings</field>
            <field name="balance">15000.00</field>
            <field name="partner_id" ref="res_partner_demo_1"/>
            <field name="status">active</field>
        </record>

        <record id="banking_account_demo_2" model="x_banking.account">
            <field name="account_number">ACC00002_DEMO</field>
            <field name="account_type">checking</field>
            <field name="balance">5000.00</field>
            <field name="partner_id" ref="res_partner_demo_1"/>
            <field name="status">active</field>
        </record>

        <record id="banking_account_demo_3" model="x_banking.account">
            <field name="account_number">ACC00003_DEMO</field>
            <field name="account_type">fixed_deposit</field>
            <field name="balance">25000.00</field>
            <field name="partner_id" ref="res_partner_demo_2"/>
            <field name="status">active</field>
        </record>

        <!-- Demo Loans -->
        <record id="banking_loan_demo_1" model="x_banking.loan">
            <field name="loan_type">Home Loan</field>
            <field name="principal_amount">250000.00</field>
            <field name="interest_rate">4.5</field>
            <field name="term">360</field>
            <field name="status">active</field>
            <field name="partner_id" ref="res_partner_demo_1"/>
            <field name="collateral_type">property</field>
            <field name="collateral_value">300000.00</field>
            <field name="disbursement_date">2023-01-01</field>
        </record>

        <record id="banking_loan_demo_2" model="x_banking.loan">
            <field name="loan_type">Car Loan</field>
            <field name="principal_amount">30000.00</field>
            <field name="interest_rate">6.0</field>
            <field name="term">60</field>
            <field name="status">approved</field>
            <field name="partner_id" ref="res_partner_demo_2"/>
            <field name="collateral_type">vehicle</field>
            <field name="collateral_value">35000.00</field>
        </record>

        <!-- Demo Tickets -->
        <record id="banking_ticket_demo_1" model="x_banking.ticket">
            <field name="name">Issue with online banking login</field>
            <field name="description">Cannot access online banking portal after password reset.</field>
            <field name="partner_id" ref="res_partner_demo_1"/>
            <field name="state">in_progress</field>
            <field name="priority">2</field>
        </record>

        <record id="banking_ticket_demo_2" model="x_banking.ticket">
            <field name="name">Query about loan repayment schedule</field>
            <field name="description">Customer wants clarification on the next repayment amount.</field>
            <field name="partner_id" ref="res_partner_demo_2"/>
            <field name="state">new</field>
            <field name="priority">1</field>
        </record>

        <!-- Demo CRM Leads -->
        <record id="crm_lead_demo_1" model="crm.lead">
            <field name="name">New customer interested in savings account</field>
            <field name="partner_id" ref="res_partner_demo_2"/>
            <field name="expected_product_type">account</field>
            <field name="lead_source_bank">Website Form</field>
            <field name="estimated_income">60000.00</field>
            <field name="employment_status">employed</field>
            <field name="existing_customer" eval="False"/>
        </record>

        <record id="crm_lead_demo_2" model="crm.lead">
            <field name="name">Existing customer looking for personal loan</field>
            <field name="partner_id" ref="res_partner_demo_1"/>
            <field name="expected_product_type">loan</field>
            <field name="lead_source_bank">Branch Visit</field>
            <field name="estimated_income">80000.00</field>
            <field name="employment_status">employed</field>
            <field name="existing_customer" eval="True"/>
        </record>

    </data>
</odoo>
