<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Record Rules for Branch Manager -->
        <record id="branch_manager_all_records_rule" model="ir.rule">
            <field name="name">Branch Manager: All Records</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('odoo_banking_crm.group_banking_branch_manager'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>

        <!-- Record Rules for Compliance Officer -->
        <record id="compliance_officer_read_all_records_rule" model="ir.rule">
            <field name="name">Compliance Officer: Read All Records</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('odoo_banking_crm.group_banking_compliance_officer'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>
    </data>
</odoo>