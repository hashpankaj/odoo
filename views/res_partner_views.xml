<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_partner_view_form_inherit_banking_crm" model="ir.ui.view">
        <field name="name">res.partner.view.form.inherit.banking.crm</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales_purchases']" position="after">
                <page string="Banking Information" name="banking_information" class="o_banking_sheet">
                    <group class="o_banking_card">
                        <group string="KYC">
                            <field name="kyc_status"/>
                            <field name="credit_score"/>
                            <field name="cif_number"/>
                        </group>
                        <group string="KYC &amp; Regulatory Information">
                            <field name="full_legal_name"/>
                            <field name="mother_name"/>
                            <field name="nationality"/>
                            <field name="taxpayer_identification_number"/>
                            <field name="occupation"/>
                            <field name="employer_name"/>
                            <field name="source_of_income"/>
                            <field name="employment_tenure"/>
                            <field name="existing_bank_account_details"/>
                        </group>
                        <group string="Personal Information">
                            <field name="date_of_birth"/>
                            <field name="gender"/>
                            <field name="marital_status"/>
                        </group>
                        <group string="Preferences">
                            <field name="communication_preference"/>
                            <field name="consent_gdpr"/>
                            <field name="marketing_segment"/>
                        </group>
                        <group string="Social Media">
                            <field name="linkedin_profile" widget="url"/>
                            <field name="twitter_profile" widget="url"/>
                            <field name="facebook_profile" widget="url"/>
                        </group>
                    </group>
                    <notebook class="o_banking_card">
                        <page string="Dashboard" name="dashboard">
                            <field name="dashboard_html" widget="html"/>
                        </page>
                        <page string="Bank Accounts" name="bank_accounts">
                            <field name="bank_account_ids">
                                <tree editable="bottom">
                                    <field name="account_number"/>
                                    <field name="account_type"/>
                                    <field name="balance" widget="monetary"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Loans" name="loans">
                            <field name="loan_ids">
                                <tree editable="bottom">
                                    <field name="loan_type"/>
                                    <field name="principal_amount" widget="monetary"/>
                                    <field name="interest_rate"/>
                                    <field name="term"/>
                                    <field name="status"/>
                                    <field name="currency_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Tickets" name="tickets">
                            <field name="ticket_ids"/>
                        </page>
                        <page string="Cards" name="cards">
                            <field name="card_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="card_type"/>
                                    <field name="expiration_date"/>
                                    <field name="is_active"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </page>
            </xpath>
        </field>
    </record>
</odoo>