<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Pivot View for Loan Analysis Report -->
    <record id="loan_analysis_report_view_pivot" model="ir.ui.view">
        <field name="name">x_loan.analysis.report.view.pivot</field>
        <field name="model">x_loan.analysis.report</field>
        <field name="arch" type="xml">
            <pivot string="Loan Analysis">
                <field name="partner_id" type="row"/>
                <field name="loan_type" type="col"/>
                <field name="principal_amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Action for Loan Analysis Report -->
    <record id="loan_analysis_report_action" model="ir.actions.act_window">
        <field name="name">Loan Analysis</field>
        <field name="res_model">x_loan.analysis.report</field>
        <field name="view_mode">pivot</field>
    </record>

    <!-- Menu Item for Reporting -->
    <menuitem id="menu_banking_crm_reporting" name="Reporting" parent="menu_banking_crm_root" sequence="60"/>

    <!-- Menu Item for Loan Analysis -->
    <menuitem id="menu_loan_analysis_report" name="Loan Analysis" parent="menu_banking_crm_reporting" action="loan_analysis_report_action" sequence="10"/>

</odoo>
