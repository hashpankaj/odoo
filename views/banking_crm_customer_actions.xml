<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_banking_crm_customers_filtered" model="ir.actions.act_window">
        <field name="name">Customers</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('customer_rank', '>', 0)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new customer
            </p><p>
                Manage your customer relationships.
            </p>
        </field>
    </record>
    <record id="action_banking_crm_external_partners" model="ir.actions.act_window">
        <field name="name">All External Partners</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('user_ids', '=', False)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new external partner
            </p><p>
                This view shows all partners that are not internal Odoo users.
            </p>
        </field>
    </record>
</odoo>