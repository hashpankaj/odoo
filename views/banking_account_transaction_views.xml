<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View for Account Transactions -->
    <record id="banking_account_transaction_view_tree" model="ir.ui.view">
        <field name="name">x_banking.account.transaction.view.tree</field>
        <field name="model">x_banking.account.transaction</field>
        <field name="arch" type="xml">
            <tree string="Account Transactions" editable="bottom" class="o_banking_list_view">
                <field name="date"/>
                <field name="description"/>
                <field name="transaction_type"/>
                <field name="amount" widget="monetary"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Action for Account Transactions -->
    <record id="banking_account_transaction_action" model="ir.actions.act_window">
        <field name="name">Account Transactions</field>
        <field name="res_model">x_banking.account.transaction</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>
