<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View for Loan Documents -->
    <record id="banking_loan_document_view_tree" model="ir.ui.view">
        <field name="name">x_banking.loan.document.view.tree</field>
        <field name="model">x_banking.loan.document</field>
        <field name="arch" type="xml">
            <tree string="Loan Documents" editable="bottom" class="o_banking_list_view">
                <field name="name"/>
                <field name="document_type"/>
                <field name="document" widget="binary" filename="name"/>
                <field name="loan_application_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Action for Loan Documents -->
    <record id="banking_loan_document_action" model="ir.actions.act_window">
        <field name="name">Loan Documents</field>
        <field name="res_model">x_banking.loan.document</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>
