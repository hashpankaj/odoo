<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Graph View for Ticket Analysis Report -->
    <record id="ticket_analysis_report_view_graph" model="ir.ui.view">
        <field name="name">x_ticket.analysis.report.view.graph</field>
        <field name="model">x_ticket.analysis.report</field>
        <field name="arch" type="xml">
            <graph string="Ticket Analysis">
                <field name="state" type="row"/>
                <field name="priority" type="col"/>
            </graph>
        </field>
    </record>

    <!-- Action for Ticket Analysis Report -->
    <record id="ticket_analysis_report_action" model="ir.actions.act_window">
        <field name="name">Ticket Analysis</field>
        <field name="res_model">x_ticket.analysis.report</field>
        <field name="view_mode">graph</field>
    </record>

    <!-- Menu Item for Ticket Analysis -->
    <menuitem id="menu_ticket_analysis_report" name="Ticket Analysis" parent="menu_banking_crm_reporting" action="ticket_analysis_report_action" sequence="20"/>

</odoo>
