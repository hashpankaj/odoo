<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sequence for Account Number -->
    <record id="seq_banking_account" model="ir.sequence">
        <field name="name">Banking Account Sequence</field>
        <field name="code">x_banking.account</field>
        <field name="prefix">ACC</field>
        <field name="padding">5</field>
        <field name="company_id" eval="False"/>
    </record>

    <!-- Tree View -->
    <record id="banking_account_view_tree" model="ir.ui.view">
        <field name="name">x_banking.account.view.tree</field>
        <field name="model">x_banking.account</field>
        <field name="arch" type="xml">
            <tree string="Bank Accounts" class="o_banking_list_view">
                <field name="account_number"/>
                <field name="partner_id"/>
                <field name="account_type"/>
                <field name="balance" widget="monetary"/>
                <field name="currency_id" invisible="1"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="banking_account_view_form" model="ir.ui.view">
        <field name="name">x_banking.account.view.form</field>
        <field name="model">x_banking.account</field>
        <field name="arch" type="xml">
            <form string="Bank Account" class="o_banking_form_view">
                <sheet class="o_banking_sheet">
                    <group class="o_banking_card">
                        <group>
                            <field name="account_number"/>
                            <field name="partner_id"/>
                            <field name="account_type"/>
                        </group>
                        <group>
                            <field name="balance" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="status"/>
                        </group>
                    </group>
                    <notebook class="o_banking_card">
                        <page string="Transactions" name="transactions">
                            <field name="transaction_ids"/>
                        </page>
                        <page string="Cards" name="cards">
                            <field name="card_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="card_type"/>
                                    <field name="expiration_date"/>
                                    <field name="is_active"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action Window -->
    <record id="banking_account_action" model="ir.actions.act_window">
        <field name="name">Bank Accounts</field>
        <field name="res_model">x_banking.account</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>