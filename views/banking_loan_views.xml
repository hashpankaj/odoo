<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="banking_loan_view_tree" model="ir.ui.view">
        <field name="name">x_banking.loan.view.tree</field>
        <field name="model">x_banking.loan</field>
        <field name="arch" type="xml">
            <tree string="Loans" class="o_banking_list_view">
                <field name="loan_type"/>
                <field name="partner_id"/>
                <field name="principal_amount" widget="monetary"/>
                <field name="interest_rate"/>
                <field name="term"/>
                <field name="status"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="banking_loan_view_form" model="ir.ui.view">
        <field name="name">x_banking.loan.view.form</field>
        <field name="model">x_banking.loan</field>
        <field name="arch" type="xml">
            <form string="Loan" class="o_banking_form_view">
                <sheet class="o_banking_sheet">
                    <group class="o_banking_card">
                        <group>
                            <field name="loan_type"/>
                            <field name="partner_id"/>
                            <field name="principal_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="interest_rate"/>
                            <field name="term"/>
                            <field name="status" widget="statusbar" statusbar_visible="application,approved,active,paid_off"/>
                        </group>
                    </group>
                    <group string="Repayment Details" class="o_banking_card">
                        <field name="repayment_schedule"/>
                    </group>
                    <notebook class="o_banking_card">
                        <page string="Collateral Details" name="collateral_details">
                            <group>
                                <group>
                                    <field name="collateral_type"/>
                                    <field name="collateral_value"/>
                                </group>
                                <group>
                                    <field name="disbursement_date"/>
                                </group>
                            </group>
                        </page>
                        <page string="Disbursement Info" name="disbursement_info">
                            <group>
                                <group>
                                    <field name="loan_account_number"/>
                                    <field name="emi_installment_amount"/>
                                </group>
                                <group>
                                    <field name="repayment_start_date"/>
                                    <field name="next_due_date"/>
                                </group>
                            </group>
                        </page>
                        <page string="Application Link" name="application_link">
                            <group>
                                <field name="loan_application_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action Window -->
    <record id="banking_loan_action" model="ir.actions.act_window">
        <field name="name">Loans</field>
        <field name="res_model">x_banking.loan</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>