<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View for Banking Overall Dashboard -->
    <record id="banking_overall_dashboard_view_form" model="ir.ui.view">
        <field name="name">x_banking.overall.dashboard.view.form</field>
        <field name="model">x_banking.overall.dashboard</field>
        <field name="arch" type="xml">
            <form string="Overall Banking Dashboard" create="false" edit="false" delete="false" class="o_banking_form_view">
                <sheet>
                    <div class="o_banking_dashboard">
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" icon="fa-users" type="object" name="action_view_leads">
                                <field name="total_leads" widget="statinfo" string="Total Leads"/>
                            </button>
                            <button class="oe_stat_button" icon="fa-user" type="object" name="action_view_customers">
                                <field name="total_customers" widget="statinfo" string="Total Customers"/>
                            </button>
                            <button class="oe_stat_button" icon="fa-bank" type="object" name="action_view_bank_accounts">
                                <field name="total_bank_accounts" widget="statinfo" string="Total Accounts"/>
                            </button>
                            <button class="oe_stat_button" icon="fa-money" type="object" name="action_view_loans">
                                <field name="total_loans" widget="statinfo" string="Total Loans"/>
                            </button>
                            <button class="oe_stat_button" icon="fa-file-text-o" type="object" name="action_view_loan_applications">
                                <field name="total_loan_applications" widget="statinfo" string="Total Applications"/>
                            </button>
                            <button class="oe_stat_button" icon="fa-ticket" type="object" name="action_view_tickets">
                                <field name="total_tickets" widget="statinfo" string="Total Tickets"/>
                            </button>
                            <button class="oe_stat_button" icon="fa-bar-chart" type="object" name="action_view_leads_graph">
                                <field name="total_leads" widget="statinfo" string="Leads Graph"/>
                            </button>
                            <button class="oe_stat_button" icon="fa-pie-chart" type="object" name="action_view_customers_graph">
                                <field name="total_customers" widget="statinfo" string="Customers Graph"/>
                            </button>
                            <button class="oe_stat_button" icon="fa-line-chart" type="object" name="action_view_loans_graph">
                                <field name="total_loans" widget="statinfo" string="Loans Graph"/>
                            </button>
                            <button class="oe_stat_button" icon="fa-area-chart" type="object" name="action_view_tickets_graph">
                                <field name="total_tickets" widget="statinfo" string="Tickets Graph"/>
                            </button>
                            <button class="oe_stat_button" icon="fa-bar-chart" type="object" name="action_view_accounts_graph">
                                <field name="total_bank_accounts" widget="statinfo" string="Accounts Graph"/>
                            </button>
                        </div>

                        <group class="o_banking_card">
                                        <field name="total_customers" widget="statinfo" string="Total Customers"/>
                                    </group>
                                    <button name="action_view_all_external_partners" type="object" string="View All Customers" class="oe_stat_button" icon="fa-users"/>

                        <group class="o_banking_card">
                            <group string="Financial Overview">
                                <field name="total_balance_accounts" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="total_principal_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                            <group string="Loan Status">
                                <field name="loans_active"/>
                                <field name="applications_submitted"/>
                                <field name="applications_approved"/>
                            </group>
                        </group>

                        <group string="Tickets Status" class="o_banking_card">
                            <field name="tickets_open"/>
                        </group>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action Server for Banking Overall Dashboard -->
    <record id="banking_overall_dashboard_action" model="ir.actions.server">
        <field name="name">Overall Banking Dashboard</field>
        <field name="model_id" ref="model_x_banking_overall_dashboard"/>
        <field name="state">code</field>
        <field name="code">
            action = model.action_open_dashboard()
        </field>
    </record>

    <!-- Menu Item for Overall Banking Dashboard -->
    <menuitem id="menu_banking_crm_overall_dashboard" name="Overall Dashboard" parent="menu_banking_crm_root" action="banking_overall_dashboard_action" sequence="5"/>

</odoo>
