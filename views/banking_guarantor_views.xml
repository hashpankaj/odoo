<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View for Banking Guarantor -->
    <record id="banking_guarantor_view_tree" model="ir.ui.view">
        <field name="name">x_banking.guarantor.view.tree</field>
        <field name="model">x_banking.guarantor</field>
        <field name="arch" type="xml">
            <tree string="Guarantors" editable="bottom" class="o_banking_list_view">
                <field name="name"/>
                <field name="identification_number"/>
                <field name="income_source"/>
                <field name="relationship_with_applicant"/>
            </tree>
        </field>
    </record>

    <!-- Form View for Banking Guarantor -->
    <record id="banking_guarantor_view_form" model="ir.ui.view">
        <field name="name">x_banking.guarantor.view.form</field>
        <field name="model">x_banking.guarantor</field>
        <field name="arch" type="xml">
            <form string="Guarantor" class="o_banking_form_view">
                <sheet class="o_banking_sheet">
                    <group class="o_banking_card">
                        <field name="name"/>
                        <field name="identification_number"/>
                        <field name="income_source"/>
                        <field name="relationship_with_applicant"/>
                        <field name="loan_application_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action Window for Banking Guarantor -->
    <record id="banking_guarantor_action" model="ir.actions.act_window">
        <field name="name">Guarantors</field>
        <field name="res_model">x_banking.guarantor</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Item for Guarantors (optional, mainly for testing/direct access) -->
    <menuitem id="menu_banking_crm_guarantors" name="Guarantors" parent="menu_banking_crm_root" action="banking_guarantor_action" sequence="80"/>

</odoo>
